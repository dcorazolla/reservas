{
  "info": {
    "name": "Partners Billing",
    "description": "Collection for partners billing endpoints (invoices & payments)",
    "version": "1.0"
  },
  "items": [
    {
      "name": "Create Invoice",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/api/invoices",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"partner_id\": \"<partner-uuid>\",\n  \"lines\": [ { \"description\": \"Room\", \"quantity\": 1, \"unit_price\": 120.0 } ]\n}"
        }
      }
    },
    {
      "name": "Create Payment",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/api/invoices/{invoice}/payments",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"amount\": 120.0,\n  \"method\": \"card\"\n}"
        }
      }
    }
  ]
}
