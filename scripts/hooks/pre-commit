#!/usr/bin/env bash
# Git pre-commit hook template that calls the project's commit_and_test.sh script.
ROOT_DIR=$(cd "$(dirname "$0")/../.." && pwd)
if [ -x "$ROOT_DIR/scripts/commit_and_test.sh" ]; then
  "$ROOT_DIR/scripts/commit_and_test.sh" || {
    echo "Pre-commit checks failed. Commit aborted." >&2
    exit 1
  }
else
  echo "commit_and_test.sh not found or not executable. Skipping pre-commit checks." >&2
fi

exit 0
